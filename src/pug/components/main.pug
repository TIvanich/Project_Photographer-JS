main.main
  .container
    .hero
      .hero__tittle      
        h1(text='hero-title') Alexa Rise
        h3(text='hero-text') Save sincere emotions, romantic feelings and happy moments of life together with professional photographer Alexa Rise
        button(text='hire') Hire me
      //- .hero__img
